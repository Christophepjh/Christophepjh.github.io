{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "params": [
        {
          "name": "selector1",
          "value": 2020,
          "bind": {
            "input": "range",
            "min": 1970,
            "max": 2020,
            "step": 10,
            "name": "Year for Cattle:"
          }
        },
        {
          "name": "selector2",
          "value": 2020,
          "bind": {
            "input": "range",
            "min": 1970,
            "max": 2020,
            "step": 10,
            "name": "Year for Chickens:"
          }
        },
        {
          "name": "selector3",
          "value": 2020,
          "bind": {
            "input": "range",
            "min": 1970,
            "max": 2020,
